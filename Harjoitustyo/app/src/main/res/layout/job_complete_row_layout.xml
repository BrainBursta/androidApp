<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_job_id2"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:textStyle="bold"
        android:text="ID"/>

    <TextView
        android:id="@+id/txt_job_selite"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/txt_job_id2"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Selite"/>
    <TextView
        android:id="@+id/txt_job_suoritteet"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/txt_job_selite"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Suoritteet"/>
    <TextView
        android:id="@+id/txt_job_tunnit"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_toEndOf="@+id/txt_job_suoritteet"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Tunnit" />
    <TextView
        android:id="@+id/txt_job_status2"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_toEndOf="@+id/txt_job_tunnit"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Tila"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#3D5AFF"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/txt_job_id2">

    </View>

</RelativeLayout>