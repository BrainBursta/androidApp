<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:focusable="false"
    >

    <TextView
        android:id="@+id/txt_job_id"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:text="ID"
        android:textColor="#000000"
        android:focusable="false"/>

    <TextView
        android:id="@+id/txt_job_desc"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/txt_job_id"
        android:gravity="center"
        android:text="Desc"
        android:textColor="#000000"
        android:focusable="false"/>
    <TextView
        android:id="@+id/txt_job_deadline"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/txt_job_desc"
        android:gravity="center"
        android:text="Deadline"
        android:textColor="#000000"
        android:focusable="false"/>
    <TextView
        android:id="@+id/txt_job_status"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/txt_job_deadline"
        android:gravity="center"
        android:text="Tila"
        android:textColor="#000000"
        android:focusable="false"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#3D5AFF"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/txt_job_id"
        android:focusable="false">

    </View>

</RelativeLayout>