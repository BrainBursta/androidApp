<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.joonas.harjoitustyo.JobCompleteActivity"
    tools:showIn="@layout/app_bar_job_complete">

    <TextView
        android:id="@+id/txt_job_id_header2"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:textStyle="bold"
        android:text="ID"/>

    <TextView
        android:id="@+id/txt_job_selite_header"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/txt_job_id_header2"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Selite"/>
    <TextView
        android:id="@+id/txt_job_suoritteet_header"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/txt_job_selite_header"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Suoritteet"/>
    <TextView
        android:id="@+id/txt_job_tunnit_header"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_toEndOf="@+id/txt_job_suoritteet_header"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Tunnit"/>
    <TextView
        android:id="@+id/txt_job_status_header2"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_toEndOf="@+id/txt_job_tunnit_header"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Tila"/>
    <View
        android:id="@+id/header_view2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#3D5AFF"
        android:layout_below="@+id/txt_job_id_header2">

    </View>



    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listview_job_complete"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/header_view2"

        android:choiceMode="singleChoice"
        android:listSelector="@color/selected_item"/>

</RelativeLayout>
